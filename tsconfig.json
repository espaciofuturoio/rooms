{
  "extends": "expo/tsconfig.base",
	"compilerOptions": {
		"module": "esnext",
		"strict": true,
		"paths": {
			"@/*": ["./*"]
		},
		"skipLibCheck": true,
    "experimentalDecorators": true,
	},
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/node_modules/**",
	"./labs/**",
	"./app-example/**"
  ]
}
